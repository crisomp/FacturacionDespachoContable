@model FacturacionDespachoContable.Models.factura

@{
    ViewBag.Title = "Detalles";
    decimal total = 0;
}

<h2>Detalles</h2>

<div>
    <h4></h4>
    <hr />
    <p>
        @Html.ActionLink("Regresar", "Index")
    </p>
    <table class="table">
        <tr class="font-weight-bolder">
            <td>
                @Html.DisplayNameFor(model => model.fecha)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.cliente.nombreCompleto)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.total)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.iva)
            </td>
        </tr>
        <tr>
            <td>
                @Model.fecha.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(model => model.cliente.nombreCompleto)
            </td>
            <td>
                $@Html.DisplayFor(model => model.total)
            </td>
            <td>
                $@Html.DisplayFor(model => model.iva)

            </td>
        </tr>
    </table>

    <table class="table table-dark">
        <tr class="font-weight-bold">
            <td>Cantidad</td>
            <td>Servicio</td>
            <td>Precio</td>
            <td>Valor</td>
        </tr>
        @foreach (var detalle in Model.detalleFactura)
        {
            total = total + detalle.valor;
            <tr>
                <td>@detalle.cantidad</td>
                <td>@detalle.servicio.nombre</td>
                <td>@detalle.precio</td>
                <td>@detalle.valor</td>
            </tr>
        }
        <tr>
            <td colspan="3">TOTAL</td>
            <td>$ @total</td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Regresar", "Index")
</p>

